{{#each article}}
    <div class="col-md-12">
            <h2><a href="{{link}}" target="_blank">{{title}}</a></h2>
            <p>{{blurb}}</p>
            <p>
                <form action="/save" method="POST">
                    <input name="_id" value="{{_id}}" type="hidden"/>
                    <button type="submit" class="btn btn-default">Save Article</button>
                </form>
            </p>
    </div>
{{/each}}
